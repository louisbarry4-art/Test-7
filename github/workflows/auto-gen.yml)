name: Auto generate posts from Sheet

on:
  schedule:
    - cron: '0 3 * * *'  # runs daily at 03:00 UTC
  workflow_dispatch:      # allow manual run

jobs:
  generate:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          persist-credentials: true

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: pip install pandas

      - name: Run generator
        env:
          SHEET_CSV_URL: ${{ secrets.SHEET_CSV_URL }}
        run: python scripts/generate_posts.py

      - name: Commit generated posts
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add _posts || true
          git commit -m "Auto: add posts from sheet $(date -u +'%Y-%m-%d')" || echo "No new posts"
          git push
